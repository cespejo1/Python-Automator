print("OM Interface Automation Tool v1.0 by Carlos Espejo and James Barett\n")

validOption = False

while validOption == False:
    choice = input("Hello! Please tell us what to do >>> ")

    print("Your choice was %s"%choice)

    if choice == "C":
        print("Calibrate")
        validOption = True
    elif choice == "I":
        print("Import")
        validOption = True
    elif choice == "P":
        print("Paste")
        validOption = True
    elif choice == "Q":
        validOption = True
        exit()
    else:
        print("Available options are:")
        print("C - Calibrate")
        print("I - Import")
        print("P - Paste")
        print("Q - Quit")
        validOption = False

print("Other Code")

